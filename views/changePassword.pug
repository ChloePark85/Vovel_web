extends layouts/main

block content
    .form-container
        form(action=routes.changePassword, method="post")
            input(type="password", name="current password", placeholder="현재 비밀번호")
            input(type="password", name="new password", placeholder="새로운 비밀번호")
            input(type="password", name="verify new password", placeholder="비밀번호 확인")
            input(type="submit", value="비밀번호 변경")